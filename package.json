{
  "name": "nuxt-boilerplate",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint . --ext .ts,.js,.vue --ignore-path .gitignore --fix",
    "test:unit": "vitest",
    "test:e2e": "npm run dev & cypress open",
    "test:e2e:ci": "start-server-and-test dev http://localhost:3000 \"cypress run --e2e --headless\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@mantine/core": "^7.10.1",
    "nuxt": "^3.12.0",
    "vue": "^3.4.27",
    "vue-router": "^4.3.2"
  },
  "devDependencies": {
    "@emotion/css": "^11.11.2",
    "@nuxt/test-utils": "^3.12.0",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@nuxtjs/tailwindcss": "^6.12.0",
    "@playwright/test": "^1.44.1",
    "@types/node": "^20.14.0",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.19",
    "cypress": "^13.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.26.0",
    "husky": "^9.0.11",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "start-server-and-test": "^2.0.3",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0",
    "vue-tsc": "^2.2.10"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix"
  }
}
